<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.nano.kunal.moviemonkey.MovieDetailsActivity"
        android:id="@+id/movieDetailsRoot">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/backdropImageView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:minHeight="200dp"
            android:background="#ff7b7b7b" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/posterImageView"
            android:paddingLeft="16dp"
            android:paddingTop="128dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="visible"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleLinearLayout"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:layout_below="@+id/backdropImageView"
                android:layout_toRightOf="@+id/posterImageView"
                android:layout_toEndOf="@+id/posterImageView">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/titleTextView"
                    android:textSize="24sp"
                    android:textColor="#dfffffff"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/releaseTextView"
                    android:textSize="16sp"
                    android:textColor="#dfffffff" />

            </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleLinearLayout"
            android:padding="8dp"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:id="@+id/summaryTitle"
                android:textSize="16sp"
                android:textColor="#dfffffff"
                android:paddingTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/summaryTextView"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:id="@+id/ratingTitle"
                android:textSize="16sp"
                android:textColor="#dfffffff"
                android:paddingTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/ratingTextView"
                android:textColor="#dfffffff"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>

